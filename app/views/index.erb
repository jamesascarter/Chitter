<html>

<h1>Welcome to Shitter</h1>

<ul>
  <% @peeps.reverse.each do |peep| %>
    <li> <%= peep.message %> <%= peep.name %><%= peep.username %> </li>
  <% end %>
</ul>

 <% if current_user %>

<div id="new-peep">
	<form action="/peeps" method="post">
	Peep: <input type="text" name="message">
	<input type="submit" value="Peep!">
	</form>
</div>

<% end %>

</html>