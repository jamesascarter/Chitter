<html>


<body>

  <header>
    <h1>Chitter</h1>
  </header>

<section id="leftside">

  <% if current_user %>

    <div id="new-peep">
      <form action="/peeps" method="post">
      Peep: <input type="text" name="message">
      <input type="submit" value="Peep!">
      </form>
    </div>

  <% else %>

      <form method="get" action="/users/new">
        <input type="submit" value="Sign up">
      </form>

      <form method="get" action="/sessions/new">
        <input type="submit" value="Sign in">
      </form>

  <% end %>

</section>



<section id="rightside">
  <ul class="peeps">
    <% @peeps.reverse.each do |peep| %>
      <li> <%= peep.message %> <%= peep.user.name %><%= peep.user.username %> </li>
    <% end %>
  </ul>
</section>

</body>
</html>